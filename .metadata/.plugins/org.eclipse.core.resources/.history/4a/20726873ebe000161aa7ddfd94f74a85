public class Solution {
	
	public static void main(String[] args) {
		
		LinkedList L = new LinkedList(2);
		LinkedList LL = new LinkedList(22);
		LinkedList S  = new LinkedList(3);
		
		L.next = LL;
		LL.next = S;
		
		LinkedList sum = addTwoNumbers(L,LL);
		
	}
	
public static LinkedList addTwoNumbers(LinkedList L1, LinkedList L2){
		
		
		LinkedList sum = new LinkedList(0);
		LinkedList newNode = sum;
		
		while (L1 != null && L2 !=null){
			
		sum.val = L1.val + L2.val;
		newNode = sum.next;
		L1 = L1.next;
		L2 = L2.next;
		
		}
		
		return sum;
	}

}

class LinkedList{
	
	public int val;
	public LinkedList next;
	
	public LinkedList(int val){
		this.val = val;
		this.next = null;
	}
	
	public void addNext(LinkedList next){
		this.next = next;
	}
	
	public void addValue(int val){
		this.val = val;
	}
	
	
}



